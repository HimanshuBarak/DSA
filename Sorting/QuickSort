// Online C++ compiler to run C++ program online
#include <iostream>
#include<bits/stdc++.h>

using namespace std;

//this function is responsible for finding the position of a given element
int partition(int arr[],int low,int high)
{
    int pivot =arr[low];
    int i=low;
    int j=high;

    while(true)
    {  //find a element that is greater than pivot
        while(i<=j && arr[i]<=pivot)
        {
            i++;
        }
        //find a element that is lesser than pivot
        while(j>=i && arr[j]>=pivot)
        {
            j--;
        }
        if(j<i)
            break;
        else{
            //swap the elements in the opposite sides
            swap(arr[i],arr[j]);
        }
    }
   //shift the pivot element to its sorted position in the array
    swap(arr[low],arr[j]);
    return j;


}

void QuickSort(int arr[],int low,int high){
    int j;
    if(low<high){
        j=partition(arr,low,high);
        QuickSort(arr,low,j-1);
        QuickSort(arr,j+1,high);
    }
}
int main() {
    // Write C++ code here
    cout<<"Hello world!";
    int arr[] = {50,70,60,90,40,80,10,20,30};
    int n=9;
    QuickSort(arr,0,8);
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
    return 0;
}

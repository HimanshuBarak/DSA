ListNode *detectCycle(ListNode *head) {
        
        ListNode* fast=head;
        ListNode* slow=head;
        int present=0;
        while(fast!=NULL && fast->next!=NULL)
        {
            fast=fast->next->next;
            slow=slow->next;
            
            if(fast==slow)
            {
                present=1;
                break;
            }
        }
        if(present)
        {
            //if loop is present by using the formula m=i*n-k
            
            slow=head;
            while(true)
            {   
                //this is the starting point of the linked list
                if(slow==fast)
                    return fast;
                slow=slow->next;
                fast=fast->next;
                
            }
        }
        else
            return NULL;
        
    }
